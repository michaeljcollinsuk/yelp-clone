<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
    <h3>Average rating: <%= star_rating(restaurant.average_rating) %></h3>
    <p><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) if restaurant.user == current_user %></p>
    <p><%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete if restaurant.user == current_user %></p>
    <p><%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) if !current_user || !current_user.has_reviewed?(restaurant) %></p>
    <% if restaurant.reviews.any? %>
      <ul>
        <% restaurant.reviews.each do |review| %>
          <li>
            <%= review.thoughts %>, <strong><%= review.rating %></strong>/5
            <%= link_to "Endorse Review", review_endorsements_path(review), class: 'endorsements-link' %>
            <span class="endorsements_count"><%= review.endorsements.count %></span> <%= "endorsement".pluralize(review.endorsements.count) %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No reviews.</p>
    <% end %>
  <% end %>
<% else %>
  <h1>No restaurants yet.</h1>
<% end %>

<a href=<%= new_restaurant_path %>>Add a restaurant</a>
